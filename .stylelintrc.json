{
    "extends": "stylelint-config-standard",
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "string-quotes": "single",
        "declaration-block-no-duplicate-properties": true,
        "rule-empty-line-before": "always",
        "no-empty-source": null,
        "order/order": [
            "declarations",
            {
              "type": "at-rule",
              "name": "media"
            },
            {
              "type": "rule",
              "selector": "^&::(before|after)"
            },
            {
              "type": "rule",
              "selector": "^&:\\w"
            },
            {
              "type": "rule",
              "selector": "^&_"
            },
            {
              "type": "rule",
              "selector": "^."
            }
          ]
    }
}